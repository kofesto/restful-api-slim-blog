{
    "name": "kofesto/rest-api-slim-blog",
    "description": "Example of using the slim framework to make a Restful API",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/marcosricardoss/rest-api-slim-example",
    "license": "MIT",
    "authors": [
        {
            "name": "koffi k. seglo",
            "email": "kofesto@gmail.com",
            "homepage": "http://www.kofestotech.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "^5.2",
        "vlucas/phpdotenv": "^2.2",
        "firebase/php-jwt": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "mikey179/vfsStream": "^1.6"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "Marcosricardoss\\Restful\\" : "src"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}  
